@model GymDomain.Model.Exercise

@{
ViewData["Title"] = "Details";
Layout = "/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Exercise</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt class="col-sm-2">
            Image
        </dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.ImagePath))
            {
            <img src="@Model.ImagePath" alt="Exercise image" style="max-width: 300px; border-radius: 12px;" />
            }
            else
            {
            <span>No image provided</span>
            }
        </dd>

        <dt class="col-sm-2">
            Reference
        </dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.ReferenceUrl))
            {
            <a href="@Model.ReferenceUrl" target="_blank">@Model.ReferenceUrl</a>
            }
            else
            {
            <span>No link provided</span>
            }
        </dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>

@model GymDomain.Model.TrainingPlan

@{
ViewData["Title"] = "Delete";
Layout = "/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h1 class="fw-bold mb-3" style="font-size: 2.2rem;">Delete Training Plan</h1>

    <h4 class="text-muted mb-4">Are you sure you want to delete this?</h4>

    <div class="mb-4">
        <dl class="row">
            <dt class="col-sm-2 fw-semibold">Name</dt>
            <dd class="col-sm-10">@Model.Name</dd>

            <dt class="col-sm-2 fw-semibold">Description</dt>
            <dd class="col-sm-10">@Model.Description</dd>
        </dl>
    </div>

    <form asp-action="Delete" class="d-flex align-items-center gap-3">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn-custom-black" />
        <a asp-action="Index" class="btn btn-link">Back to List</a>
    </form>
</div>

@section Scripts {
<style>
    .btn-custom-black {
        background-color: #000;
        color: #fff;
        padding: 10px 24px;
        border-radius: 8px;
        font-weight: 600;
        text-transform: uppercase;
        border: 2px solid #000;
        transition: all 0.3s ease;
    }

    .btn-custom-black:hover {
        background-color: #fff;
        color: #000;
    }
</style>
}

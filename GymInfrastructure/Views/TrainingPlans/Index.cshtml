@model IEnumerable<GymDomain.Model.TrainingPlan>

@{
ViewData["Title"] = "Training Plan";
Layout = "/Views/Shared/_Layout.cshtml";
}

@using System.Security.Claims
@{
var isAdmin = User.IsInRole("Admin");
}


<style>
    .btn-custom-dark {
        color: #212529;
        border: 2px solid #212529;
        background-color: transparent;
        transition: all 0.2s;
    }

    .btn-custom-dark:hover {
        background-color: #212529;
        color: white;
    }
    .btn-text {
        background: none;
        border: none;
        color: #000;
        font-weight: 500;
        font-size: 13px;
        padding: 4px 8px;
        margin-right: 1px;
        cursor: pointer;
        text-transform: uppercase;
        text-decoration: none; 
        transition: color 0.2s ease;
    }

    .btn-text:hover {
        color: #777777;
    }


    .btn-outline-delete {
        background: none;
        border: none;
        color: rgba(38, 0, 0, 0.36);
        font-weight: 500;
        font-size: 13px;
        padding: 4px 8px;
        margin-right: 1px;
        cursor: pointer;
        text-transform: uppercase;
        text-decoration: none;
        transition: color 0.2s ease;
    }

    .btn-outline-delete:hover {
        color: #777777;
    }

    .table thead th {
        font-size: 1rem;
        font-weight: 700;
        letter-spacing: 0.05rem;
        color: #343a40;
    }
</style>

<div class="container mt-5">
    <div class="container mt-1 sticky-top bg-white" style="z-index: 1020;">
        <div class="d-flex justify-content-between align-items-center mb-4 pt-2">
            <div>
                <h1 class="fw-bold">TRAINING PLANS</h1>
            </div>
            <div class="d-flex justify-content-end align-items-center gap-2 mb-4">
                <a asp-action="Create" class="btn btn-dark">Create New</a>

                @if (User.IsInRole("Admin"))
                {
                <a asp-controller="Exercises" asp-action="Create" class="btn btn-outline-dark">Add Exercise</a>
                <a asp-controller="Exercises" asp-action="Index" class="btn btn-outline-dark">Manage Exercises</a>
                }
            </div>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table align-middle table-borderless">
            <thead class="border-bottom">
            <tr>
                <th scope="col">NAME</th>
                <th scope="col">DESCRIPTION</th>
                <th scope="col" class="text-end">ACTIONS</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
            <tr class="border-bottom">
                <td class="fw-semibold" style="font-size: 1.1rem;">@item.Name</td>
                <td class="text-muted">@item.Description</td>
                <td class="text-end">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn-text">Edit</a><a asp-action="Details" asp-route-id="@item.Id" class="btn-text">Details</a><a asp-action="Delete" asp-route-id="@item.Id" class="btn-outline-delete">Delete</a>
                </td>

            </tr>
            }
            </tbody>
        </table>
    </div>
</div>

<style>
    .btn-custom-black {
        background-color: #000;
        color: #fff;
        padding: 10px 24px;
        border-radius: 8px;
        font-weight: 600;
        text-transform: uppercase;
        border: 2px solid #000;
        transition: all 0.3s ease;
        text-decoration: none; /* üí• –ó–∞–±–∏—Ä–∞—î –ø—ñ–¥–∫—Ä–µ—Å–ª–µ–Ω–Ω—è */
        font-size: 14px;        /* üëå –†–æ–±–∏—Ç—å —Ç–µ–∫—Å—Ç –æ–¥–Ω–∞–∫–æ–≤–∏–º */
        display: inline-block;  /* –í–∏—Ä—ñ–≤–Ω—é—î —è–∫ –∫–Ω–æ–ø–∫—É */
    }

    .btn-custom-black:hover {
        background-color: #fff;
        color: #000;
        text-decoration: none; /* –ü—ñ–¥—Å—Ç—Ä–∞—Ö–æ–≤–∫–∞ */
    }

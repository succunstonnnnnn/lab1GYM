@model GymDomain.Model.TrainingPlan

@{
ViewData["Title"] = "Edit";
Layout = "/Views/Shared/_Layout.cshtml";
}

<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />
    <div class="sticky-top bg-white py-3 mb-4 shadow-sm" style="z-index: 1000;">
        <h1 class="text-center fw-bold mb-2" style="font-size: 2.2rem; letter-spacing: 1px;">
            EDIT TRAINING PLAN
        </h1>

        <div class="text-center d-flex justify-content-center gap-3">
            <a class="btn btn-outline-dark px-4 py-2" asp-action="SelectExercises" asp-route-id="@Model.Id">
                Edit Exercises
            </a>
            <button type="submit" class="btn btn-dark px-5 py-2" style="letter-spacing: 1px;">
                Save
            </button>
        </div>
    </div>
    
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="form-group mb-3">
                <label class="fw-semibold">Name</label>
                <input asp-for="Name" class="form-control" />
            </div>
            <div class="form-group mb-3">
                <label class="fw-semibold">Description</label>
                <input asp-for="Description" class="form-control" />
            </div>
        </div>
    </div>
</form>

<div class="text-center mt-3">
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
